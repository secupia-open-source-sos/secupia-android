<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPOV"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blu01">

    <ImageView
        android:id="@+id/appNameIMG"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_app_name" />

    <TextView
        android:id="@+id/punchLineLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_medium"
        android:text="smart.simple.secure"
        android:textColor="@color/wht01"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appNameIMG" />

    <ImageView
        android:id="@+id/domeIMG"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="36dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/usernameHelperLBL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/punchLineLBL"
        app:srcCompat="@drawable/ic_dome" />

    <TextView
        android:id="@+id/usernameHelperLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Registered email ID"
        android:textColor="@color/wht01"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/usernameTXT"
        app:layout_constraintStart_toStartOf="@+id/usernameTXT" />

    <EditText
        android:id="@+id/usernameTXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sh_rounded_rectangle_08dp"
        android:backgroundTint="@color/wht01"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordHelperLBL"
        app:layout_constraintEnd_toEndOf="@+id/loginBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/loginBTN" />

    <TextView
        android:id="@+id/passwordHelperLBL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/cabin_medium"
        android:text="Password"
        android:textColor="@color/wht01"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/passwordTXT"
        app:layout_constraintStart_toStartOf="@+id/passwordTXT" />

    <EditText
        android:id="@+id/passwordTXT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/sh_rounded_rectangle_08dp"
        android:backgroundTint="@color/wht01"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/resetPasswordBTN"
        app:layout_constraintEnd_toEndOf="@+id/loginBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/loginBTN" />

    <TextView
        android:id="@+id/resetPasswordBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Forgot password?"
        android:textColor="@color/wht01"
        app:layout_constraintBottom_toTopOf="@+id/loginBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/loginBTN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/sh_rounded_rectangle_08dp"
        android:backgroundTint="@color/red01"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="@color/wht01"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/loaderPBR"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/wht01"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>